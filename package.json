{
  "name": "full-stack-sst-template",
  "version": "0.0.1",
  "type": "module",
  "description": "Full-stack application template with a CMS using SST",
  "author": "osairis100@gmail.com",
  "license": "MIT",
  "scripts": {
    "i:api": "pnpm --prefix packages/api i",
    "i:cms": "pnpm --prefix packages/cms i",
    "dev": "concurrently 'npm run dev:sst' 'npm run dev:cms'",
    "dev:sst": "sst dev",
    "dev:cms": "npm --prefix packages/cms start",
    "build": "sst build",
    "build:dev": "sst build --stage dev",
    "build:staging": "sst build --stage staging",
    "build:prod": "sst build --stage prod",
    "deploy": "sst deploy",
    "deploy:dev": "sst deploy --stage dev",
    "deploy:staging": "sst deploy --stage staging",
    "deploy:prod": "sst deploy --stage prod",
    "remove": "sst remove",
    "remove:dev": "sst remove --stage dev",
    "remove:staging": "sst remove --stage staging",
    "remove:prod": "sst remove --stage prod",
    "console": "sst console",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --fix --ext .js,.ts,.jsx,.tsx",
    "lint:types": "tsc --noEmit",
    "lint:spell": "git diff --cached --name-only | npx cspell --no-summary --no-progress --no-must-find-files --file-list stdin",
    "lint:all": "concurrently \"pnpm lint\" \"pnpm lint:types\" \"pnpm lint:spell\"",
    "ci:lint": "pnpm recursive run lint:all",
    "pre-commit": "concurrently \"lint-staged --allow-empty\" \"pnpm lint:spell\"",
    "prepare": "husky install",
    "sst": "sst",
    "cli": "bread",
    "create-perms": "tsx scripts/create-permissions.ts"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@bread/cli": "github:esfox/bread-cli",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.9.1",
    "@types/pg": "^8.10.9",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "aws-cdk-lib": "2.103.1",
    "concurrently": "^8.2.2",
    "constructs": "10.3.0",
    "cspell": "^7.3.8",
    "dotenv": "^16.3.1",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "inflection": "^3.0.0",
    "kysely": "^0.26.3",
    "lint-staged": "^15.0.2",
    "pg": "^8.11.3",
    "prettier": "^3.0.3",
    "prompts": "^2.4.2",
    "sst": "^2.32.2",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2"
  }
}
